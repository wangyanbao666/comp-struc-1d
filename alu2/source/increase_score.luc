module increase_score (
    input clk,  // clock
    input rst,  // reset
    input increase,
    output out[2][4]
  ) {
  dff digit1[4](#INIT(d0),.rst(rst),.clk(clk));
  dff digit2[4](#INIT(d0),.rst(rst),.clk(clk));
  always {
    if (increase){
      if (digit1.q==4d9){
        digit1.d = 4d0;
        digit2.d = digit2.q+1;
        }
      else {
        digit1.d = digit1.q+1;
        }
      }
    out[0] = digit1.q;
    out[1] = digit2.q;
  }
}
