module eight_bit_adder (
    input x[8],  // clock
    input y[8],  // reset
    input cin,
    output s[8],
    output cout
  ) {
  full_adder fulladder[8];
  always {
    fulladder.x = x;
    fulladder.y = y;
    fulladder.cin[0] = cin[0];
    fulladder.cin[7:1] = fulladder.cout[6:0];
    s = fulladder.s;
     
    cout = fulladder.cout[7];
  }
}
